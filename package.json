{
	"name": "klvr-chargerpro",
	"version": "2.0.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "npm run build && companion-module-build",
		"build": "rimraf dist && npm run build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "biome check",
		"lint:raw:unsafe": "biome check --fix --unsafe",
		"lint": "biome check"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-klvr-chargerpro.git"
	},
	"dependencies": {
		"@bitfocusas/klvr-charger": "^2.0.0",
		"@companion-module/base": "~1.11.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@companion-module/tools": "^2.1.1",
		"@types/node": "^22.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"rimraf": "^6.0.1",
		"typescript": "~5.5.4"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"npm run lint:raw:unsafe"
		]
	}
}
